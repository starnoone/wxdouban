/**index.wxss**/
.container{
  padding:0;
  width: 100%;
}
.container .header{
  padding:30rpx 30rpx;
  background: #ccc;
}
.container .header .search{
  background: #fff;
  margin:0 20rpx;
}
.container .header .search input{
  height:60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  text-align: center;
}

.container .movie{
  width:100%;
}
.container .movie .movie-nav{
  display:flex;
  width:100%;
  margin-top:20rpx;
}
.container .movie .movie-nav .nav-item{
  font-size:30rpx;
  flex:1;
  text-align:center;
}
.container .movie .movie-nav .nav-item.active{
  color:red;
}

.container .movie .movie-list{
  display: flex;
  flex-wrap: wrap;
  margin-top:20rpx;
}
.container .movie .movie-list .item{
  width:33.333%;
  text-align: center;
}
.container .movie .movie-list .item image{
  width:86%;
}
.container .movie .movie-list .item text{
  font-size: 28rpx;
  display: inline-block;
  width:86%;
  margin-top:10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
scroll-view{
  height:100vh;
  width:100%;
}

.loading{
  width:100%;
  z-index: 1000;
  text-align: center;
  background: #fff;
}

